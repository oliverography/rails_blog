<section id="main">
  <div class="wrapper">
    <h2><%= @user.name.upcase %></h2>
    <!-- NO POSTS YET MSG -->
    <% if @user.posts.length == 0 %>
      <p>No posts yet.</p>
    <% end %>
    <% @user.posts.order('created_at DESC').each do |post| %>
      <div class="wrapper">
        <%= render "posts", post: post %>
      </div>
    <% end %>
  </div>
</section>