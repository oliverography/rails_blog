<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "TITLE", class: "field", required: true %>
  <%= f.text_area :content, placeholder: "WRITE A POST", class: "field post", required: true %>
  <%= f.hidden_field :user_id, value: current_user.id, class: "field" %>
  <%= f.submit value: "POST", class: "button" %>
<% end %>