<section id="main">
  <div class="wrapper">
    <h2>SIGN IN</h2>
    <%= form_tag("login_attempt", method: "post") do %>
      <%= text_field_tag(:email, nil, placeholder: "EMAIL", class: "field") %>
      <%= password_field_tag(:password, nil, placeholder: "PASSWORD", class: "field") %>
      <%= submit_tag("SIGN IN", class: "button") %>
    <% end %>
  </div>
</section>


